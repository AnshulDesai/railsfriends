<div id="<%= dom_id friend %>" class="bg-light p-5 rounded-lg">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>  |  <%= @friend.phone %>  |  <%= @friend.twitter %>
  </p>
  <br/>
  <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-warning" %>
  <%= link_to "Back", friends_path, class: "btn btn-primary" %>
</div>